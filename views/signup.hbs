<!DOCTYPE html>
<html>
  <head>
    <title>Awesome Auth Portal</title>
    <link href="./style.css" rel='stylesheet' />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,500" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  </head>
  <body>
    <section class='container'>
      <div class='row col-8 form-container'>
        <form id='signup-form'
              class='form'
              method='post'
              action='/signup'
              spellcheck="false">

          <fieldset>
            <legend>
              <h1>Join today.</h1>
            </legend>

            <!-- <div class='row col-8'> -->

              <div class='label-container'>
                <label for='full-name'>Full Name</label>
              </div>
              <div class='input-container'>
                <input id='full-name'
                       type='text'
                       form='signup-form'
                       name='fullName'
                       pattern='[\s\x27\x30-\x39\x2C-\x2E\x41-\x5A\x61-\x7A\xC0-\xD6\xD8-\xF6\xF8-\xFF\u0100-\uFFFF]+'
                       maxlength='100'
                       required />

                <span class='validation-message'>
                  <span class='valid-input-message-container bh'>
                    <i class="fa fa-check valid-input-icon" aria-hidden="true"></i>
                  </span>

                  <span class='invalid-input-message-container bh'>
                    <i class="fa fa-times invalid-input-icon" aria-hidden="true"></i>
                    <span class='invalid-input-message'>
                      Please enter a valid name.
                    </span>
                  </span>
                </span>
              </div>

              <div class='label-container'>
                <label for='company-name'>Company</label>
                <span class='optional-field-notification'>(Optional)</span>
              </div>
              <div class='input-container'>
                <input id='company-name'
                       type='text'
                       form='signup-form'
                       name='companyName'
                       pattern='[\s\x21\x26\x27\x30-\x39\x2C-\x2E\x41-\x5A\x61-\x7A\xC0-\xD6\xD8-\xF6\xF8-\xFF\u0100-\uFFFF]+'
                       maxlength='50'
                       class='optional' />

                 <span class='validation-message'>
                   <span class='valid-input-message-container'>
                     <i class="fa fa-check valid-input-icon" aria-hidden="true"></i>
                   </span>

                   <span class='invalid-input-message-container'>
                     <i class="fa fa-times invalid-input-icon" aria-hidden="true"></i>
                     <span class='invalid-input-message'>
                       Please enter a valid company name.
                     </span>
                   </span>
                 </span>
              </div>

              <div class='label-container'>
                <label for='signup-email'>Email</label>
              </div>
              <div class='input-container'>
                <input id='signup-email'
                       type='email'
                       form='signup-form'
                       name='email'
                       maxlength='50'
                       required />

                 <span class='validation-message'>
                   <span class='valid-input-message-container'>
                     <i class="fa fa-check valid-input-icon" aria-hidden="true"></i>
                   </span>

                   <span class='invalid-input-message-container'>
                     <i class="fa fa-times invalid-input-icon" aria-hidden="true"></i>
                     <span class='invalid-input-message'>
                       Please enter a valid email.
                     </span>
                   </span>
                 </span>
              </div>

              <div class='label-container'>
                <label for='signup-password'>Password</label>
              </div>
              <div class='input-container'>
                <input id='signup-password'
                       class='password-input'
                       type='password'
                       form='signup-form'
                       name='password'
                       required />

                 <span class='validation-message'>
                   <span class='valid-input-message-container'>
                     <i class="fa fa-check valid-input-icon" aria-hidden="true"></i>
                   </span>

                   <span class='invalid-input-message-container'>
                     <i class="fa fa-times invalid-input-icon" aria-hidden="true"></i>
                     <span class='invalid-input-message'>
                       Please enter a valid password.
                     </span>
                   </span>
                 </span>
              </div>

              <div class='input-container show-password-and-caps-lock-notification-container'>
                <!-- <span class='show-password-container'> -->
                  <label for='signup-show-password' class='btn show-password-label'>
                    <input id='signup-show-password' class='btn show-password' type='checkbox' />
                    Show Password
                  </label>
                <!-- </span> -->
                <span class='caps-lock-notification-container'>
                  <i class="fa fa-exclamation-triangle caps-lock-notification-icon" aria-hidden="true"></i>
                  <span class='caps-lock-notification'>Caps Lock is on</span>
                </span>
              </div>

              <div class='nav-link-container'>
                <a class='nav-link' href='#'>Forgot Password?</a>
                <a class='nav-link' href='/login' id='login-link'>Log In!</a>
              </div>

              <button type='submit' form='signup-form' class='btn submit'>Sign Up</button>

              <!-- <hr> -->
            <!-- </div> -->
          </fieldset>
        </form>
      </div>
    </section>

    <script src='./events.js' type='text/javascript'></script>
    <script src='./helpers.js' type='text/javascript'></script>
  </body>
</html>
